<%
  link = link_to 'Add', new_project_feature_path(@project.id)
  text = "No features added. You can add feature with 'Add' link." if @features.empty?
%>
<%= panel('features', 'Features', link, text) do %>
    <% if @features.any? %>
<table class="table">
  <thead>
  <th>Name</th>
  <th>Description</th>
  <th>&nbsp;</th>
  </thead>
  <tbody>
  <%= content_tag_for(:tr, @features) do |feature|%>
        <td><%= link_to feature.name, feature_stories_path(feature.id) %></td>
        <td><%= feature.desc %></td>
        <td><%= link_to 'Delete', project_feature_path(@project.id, feature.id),
                        method: :delete, data: {confirm: 'Deleting feature is permanent action. Are you sure?'} %></td>
  <% end %>
  </tbody>
</table>
        <% end %>
<% end %>