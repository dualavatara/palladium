<div class="panel-body" id="password">
  <%= form_for(@user, url: update_password_path, remote: true) do |f| %>
      <div class="form-group">
        <%= f.label :password, 'Password' %>
        <%= f.password_field :password, class: "form-control", placeholder: 'Password' %>
        <% if @user.errors.full_messages_for(:password).any? %>
            <% @user.errors.full_messages_for(:password).each do |message| %>
                <p class="text-danger"><small><%= message %></small></p>
            <% end %>
        <% end %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, 'Confirm password' %>
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: 'Confirm password' %>
        <% if @user.errors.full_messages_for(:password_confirmation).any? %>
            <% @user.errors.full_messages_for(:password_confirmation).each do |message| %>
                <p class="text-danger"><small><%= message %></small></p>
            <% end %>
        <% end %>
      </div>
      <%= f.submit "Set password", class: "btn btn-default", id: 'set_password' %>
  <% end %>
</div>