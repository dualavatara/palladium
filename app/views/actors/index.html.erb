<%
  add_link = link_to 'Add', new_project_actor_path(@project.id)
  text = "No actors added. You can add feature with 'Add' link." if @actors.empty?
%>

<%= panel_with_table('actors', 'Actors', add_link, text) do %>
    <% if @actors.any? %>
        <table class="table">
          <thead>
          <th>Name</th>
          <th>Description</th>
          <th>&nbsp;</th>
          </thead>
          <tbody>
          <%= content_tag_for(:tr, @actors) do |actor| %>
              <td><%= actor.name %></td>
              <td><%= actor.desc %></td>
              <td>
                <%= link_to 'Edit', edit_actor_path(actor.id) %>
                <%= link_to 'Delete', actor_path(actor.id),
                            method: :delete, data: {confirm: 'Deleting actor is permanent action. Are you sure?'} %>
              </td>
          <% end %>
          </tbody>
        </table>
    <% end %>
<% end %>